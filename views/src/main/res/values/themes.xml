<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Effectivem" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">?attr/colorPrimaryVariant</item>
        <item name="viewPadding">@dimen/view_padding</item>

        <item name="bottomSheetDialogTheme">@style/Theme.Effectivem.BottomSheetDialog</item>
        <item name="cornerRadius">@dimen/view_padding</item>
        <item name="imageButtonStyle">@style/Theme.Effectivem.ImageButtonStyle</item>
        <item name="cardViewNestedStyle">@style/Theme.Effectivem.CardViewNestedStyle</item>
        <item name="cardViewStyle">@style/Theme.Effectivem.CardViewStyle</item>
        <item name="textAppearanceTitleLarge">@style/Theme.Effectivem.TextAppearance.TitleLarge</item>
    </style>
</resources>